.sc-tabbar-item {
  float: left;
  color: #666;
  height: 100%;
  display: flex;
  line-height: 1;
  font-size: 12px;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}
.sc-tabbar-item-icon {
  font-size: 18px;
  margin-bottom: 5px;
  position: relative;
}
.sc-tabbar-item-icon .sc-icon {
  display: block;
}
.sc-tabbar-item-icon-dot::after {
  top: 0;
  right: -8px;
  width: 8px;
  height: 8px;
  content: ' ';
  position: absolute;
  border-radius: 100%;
  background-color: #f44;
}
.sc-tabbar-item-icon image {
  width: 50px;
  height: 18px;
}
.sc-tabbar-item-active {
  color: #38f;
}
