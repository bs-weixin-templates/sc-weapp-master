.sc-switch {
  height: 1em;
  width: 1.6em;
  display: inline-block;
  position: relative;
  background: #fff;
  box-sizing: content-box;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 1em;
}
.sc-switch-node {
  top: 0;
  left: 0;
  z-index: 1;
  width: 1em;
  height: 1em;
  transition: 0.3s;
  position: absolute;
  border-radius: 100%;
  background-color: #fff;
  box-shadow: 0 3px 1px 0 rgba(0, 0, 0, 0.05), 0 2px 2px 0 rgba(0, 0, 0, 0.1), 0 3px 3px 0 rgba(0, 0, 0, 0.05);
}
.sc-switch-loading {
  top: 25%;
  left: 25%;
  width: 50%;
  height: 50%;
  position: absolute;
}
.sc-switch-on {
  background-color: #44db5e;
}
.sc-switch-on .sc-switch-node {
  transform: translateX(0.6em);
}
.sc-switch-disabled {
  opacity: 0.4;
}
