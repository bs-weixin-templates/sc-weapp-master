.sc-popup {
  top: 50%;
  left: 50%;
  z-index: 11;
  position: fixed;
  max-height: 100%;
  overflow-y: auto;
  box-sizing: border-box;
  background-color: #fff;
  -webkit-overflow-scrolling: touch;
  animation: ease both;
}
.sc-popup-center {
  transform: translate3d(-50%, -50%, 0);
}
.sc-popup-top {
  width: 100%;
  top: 0;
  right: auto;
  bottom: auto;
  left: 50%;
}
.sc-popup-right {
  top: 50%;
  right: 0;
  bottom: auto;
  left: auto;
}
.sc-popup-bottom {
  width: 100%;
  top: auto;
  bottom: 0;
  right: auto;
  left: 50%;
}
.sc-popup-left {
  top: 50%;
  right: auto;
  bottom: auto;
  left: 0;
}
@keyframes sc-center-enter {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
@keyframes sc-center-leave {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}
@keyframes sc-bottom-enter {
  from {
    transform: translate3d(-50%, 100%, 0);
  }
  to {
    transform: translate3d(-50%, 0, 0);
  }
}
@keyframes sc-bottom-leave {
  from {
    transform: translate3d(-50%, 0, 0);
  }
  to {
    transform: translate3d(-50%, 100%, 0);
  }
}
@keyframes sc-top-enter {
  from {
    transform: translate3d(-50%, -100%, 0);
  }
  to {
    transform: translate3d(-50%, 0, 0);
  }
}
@keyframes sc-top-leave {
  from {
    transform: translate3d(-50%, 0, 0);
  }
  to {
    transform: translate3d(-50%, -100%, 0);
  }
}
@keyframes sc-left-enter {
  from {
    transform: translate3d(-100%, -50%, 0);
  }
  to {
    transform: translate3d(0, -50%, 0);
  }
}
@keyframes sc-left-leave {
  from {
    transform: translate3d(0, -50%, 0);
  }
  to {
    transform: translate3d(-100%, -50%, 0);
  }
}
@keyframes sc-right-enter {
  from {
    transform: translate3d(100%, -50%, 0);
  }
  to {
    transform: translate3d(0, -50%, 0);
  }
}
@keyframes sc-right-leave {
  from {
    transform: translate3d(0, -50%, 0);
  }
  to {
    transform: translate3d(100%, -50%, 0);
  }
}
