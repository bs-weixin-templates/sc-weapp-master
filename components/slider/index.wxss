.sc-slider {
  position: relative;
  border-radius: 999px;
  background-color: #e5e5e5;
}
.sc-slider-bar {
  position: relative;
  border-radius: inherit;
  background-color: #38f;
}
.sc-slider-button {
  position: absolute;
  top: 50%;
  right: 0;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  background-color: #fff;
  transform: translate3d(50%, -50%, 0);
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
  /* use pseudo element to expand touch area */
}
.sc-slider-button::after {
  content: '';
  position: absolute;
  width: 200%;
  height: 200%;
  top: -50%;
  left: -50%;
}
.sc-slider-disabled {
  opacity: 0.3;
}
