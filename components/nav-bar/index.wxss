.sc-ellipsis {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.sc-multi-ellipsis-l2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.sc-multi-ellipsis-l3 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.sc-hairline,
.sc-hairline-top,
.sc-hairline-left,
.sc-hairline-right,
.sc-hairline-bottom,
.sc-hairline-top-bottom,
.sc-hairline-surround {
  position: relative;
}
.sc-hairline::after,
.sc-hairline-top::after,
.sc-hairline-left::after,
.sc-hairline-right::after,
.sc-hairline-bottom::after,
.sc-hairline-top-bottom::after,
.sc-hairline-surround::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 0 solid #e5e5e5;
}
.sc-hairline-top::after {
  border-top-width: 1px;
}
.sc-hairline-left::after {
  border-left-width: 1px;
}
.sc-hairline-right::after {
  border-right-width: 1px;
}
.sc-hairline-bottom::after {
  border-bottom-width: 1px;
}
.sc-hairline-top-bottom::after {
  border-width: 1px 0;
}
.sc-hairline-surround::after {
  border-width: 1px;
}
.sc-nav-bar {
  height: 46px;
  position: relative;
  user-select: none;
  text-align: center;
  line-height: 46px;
  background-color: #fff;
}
.sc-nav-bar-arrow {
  color: #38f;
  vertical-align: middle;
  transform: rotate(180deg);
}
.sc-nav-bar-arrow + .sc-nav-bar-text {
  margin-left: -20px;
  padding-left: 25px;
}
.sc-nav-bar-fixed {
  top: 0;
  left: 0;
  width: 100%;
  position: fixed;
}
.sc-nav-bar-title {
  margin: 0 auto;
  max-width: 60%;
  font-size: 16px;
}
.sc-nav-bar-left,
.sc-nav-bar-right {
  bottom: 0;
  font-size: 14px;
  position: absolute;
}
.sc-nav-bar-left {
  left: 15px;
}
.sc-nav-bar-right {
  right: 15px;
}
.sc-nav-bar-text {
  color: #38f;
  margin: 0 -15px;
  padding: 0 15px;
  display: inline-block;
  vertical-align: middle;
}
.sc-nav-bar-text:active {
  background-color: #e8e8e8;
}
