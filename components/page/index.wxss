.sc-page {
  display: block;
  width: 100%;
  height: 44px;
  overflow: hidden;
  box-sizing: border-box;
  position: relative;
}
.sc-page-prev {
  position: absolute;
  left: 10px;
  top: 0;
}
.sc-page-next {
  position: absolute;
  right: 10px;
  top: 0;
}
.sc-page-number {
  width: 100%;
  height: 44px;
  line-height: 44px;
  margin: 0 auto;
  text-align: center;
}
.sc-page-number-current {
  display: inline;
  color: #fd4d57;
}
.sc-page-pointer {
  width: 100%;
  height: 44px;
  line-height: 44px;
  margin: 0 auto;
  text-align: center;
}
.sc-page-pointer-dot {
  display: inline-block;
  width: 8px;
  height: 8px;
  margin: 0 2px;
  border-radius: 50%;
  background: #bbbec4;
}
.sc-page-pointer-dot.current {
  background: #e8e8e8;
}
.sc-page-button {
  display: inline-block;
  margin: 0;
}
