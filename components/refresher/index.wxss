.sc-refresher {
  position: absolute;
  top: -120rpx;
  right: 0;
  left: 0;
  overflow: hidden;
  margin: auto;
  height: 100rpx;
}
.sc-refresher-hidden {
  visibility: hidden;
}
.sc-refresher-visible {
  visibility: visible;
}
.sc-refresher-content {
  position: absolute;
  bottom: 10rpx;
  left: 0;
  width: 100%;
  color: #666;
  text-align: center;
  font-size: 60rpx;
}
.sc-refresher-content-text {
  bottom: 0;
}
.sc-refresher-text-pulling {
  font-size: 32rpx;
  line-height: 32rpx;
}
.sc-refresher-text-refreshing {
  font-size: 32rpx;
  line-height: 32rpx;
  display: none;
}
.sc-refresher-icon-pulling {
  width: 100%;
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
  -webkit-transform-style: preserve-3d;
  transform-style: preserve-3d;
  padding: 14rpx 0;
  -webkit-animation-name: refresh-spin-back;
  animation-name: refresh-spin-back;
  -webkit-animation-duration: 0.2s;
  animation-duration: 0.2s;
  -webkit-animation-timing-function: linear;
  animation-timing-function: linear;
  -webkit-animation-fill-mode: none;
  animation-fill-mode: none;
  -webkit-transform: translateZ(0) rotate(0deg);
  transform: translateZ(0) rotate(0deg);
}
.sc-refresher-icon-refreshing {
  width: 100%;
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
  -webkit-transform-style: preserve-3d;
  transform-style: preserve-3d;
  padding: 14rpx 0;
  display: none;
  -webkit-animation-duration: 1.5s;
  animation-duration: 1.5s;
}
.sc-refresher-icon-arrow-down {
  display: block;
  margin: 0 auto;
  width: 40rpx;
  height: 40rpx;
  background-repeat: no-repeat;
  background-position: center center;
  background-size: 40rpx 40rpx;
  background-image: url("data:image/png;base64,");
}
.sc-refresher-icon-refresher {
