.sc-notice-bar {
  display: flex;
  padding: 9px 10px;
  font-size: 12px;
  line-height: 1.5;
}
.sc-notice-bar-within-icon {
  position: relative;
  padding-right: 30px;
}
.sc-notice-bar-left-icon {
  height: 18px;
  min-width: 20px;
  padding-top: 1px;
  box-sizing: border-box;
}
.sc-notice-bar-left-icon > image {
  width: 16px;
  height: 16px;
}
.sc-notice-bar-right-icon {
  position: absolute;
  top: 10px;
  right: 10px;
  font-size: 15px;
  line-height: 1;
}
.sc-notice-bar-content-wrap {
  position: relative;
  flex: 1;
  height: 18px;
  overflow: hidden;
}
.sc-notice-bar-content {
  position: absolute;
  white-space: nowrap;
}
