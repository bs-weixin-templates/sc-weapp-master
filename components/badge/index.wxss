.sc-hairline,
.sc-hairline-top,
.sc-hairline-left,
.sc-hairline-right,
.sc-hairline-bottom,
.sc-hairline-top-bottom,
.sc-hairline-surround {
  position: relative;
}
.sc-hairline::after,
.sc-hairline-top::after,
.sc-hairline-left::after,
.sc-hairline-right::after,
.sc-hairline-bottom::after,
.sc-hairline-top-bottom::after,
.sc-hairline-surround::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 0 solid #e5e5e5;
}
.sc-hairline-top::after {
  border-top-width: 1px;
}
.sc-hairline-left::after {
  border-left-width: 1px;
}
.sc-hairline-right::after {
  border-right-width: 1px;
}
.sc-hairline-bottom::after {
  border-bottom-width: 1px;
}
.sc-hairline-top-bottom::after {
  border-width: 1px 0;
}
.sc-hairline-surround::after {
  border-width: 1px;
}
.sc-badge {
  display: block;
  overflow: hidden;
  font-size: 14px;
  line-height: 1.4;
  user-select: none;
  color: #666;
  word-break: break-all;
  box-sizing: border-box;
  padding: 20px 12px 20px 9px;
  background-color: #f8f8f8;
  border-left: 3px solid transparent;
}
.sc-badge:active {
  background-color: #e8e8e8;
}
.sc-badge::after {
  border-bottom-width: 1px;
}
.sc-badge-active {
  font-weight: bold;
  color: #333;
  border-color: #f44;
}
.sc-badge-active::after {
  border-right-width: 1px;
}
.sc-badge-active,
.sc-badge-active:active {
  background-color: #fff;
}
.sc-badge-info {
  position: absolute;
  top: 2px;
  right: 2px;
  color: #fff;
  font-size: 10px;
  font-weight: normal;
  transform: scale(0.8);
  text-align: center;
  box-sizing: border-box;
  padding: 0 6px;
  min-width: 18px;
  line-height: 18px;
  border-radius: 9px;
  background-color: #f44;
}
