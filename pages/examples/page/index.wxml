<sc-panel title="带有文字的按钮"></sc-panel>

<sc-page current="{{ current }}" total="5" bind:change="handleChange">
    <view slot="prev">Prev</view>
    <view slot="next">Next</view>
</sc-page>

<sc-panel title="带有文字和图标的按钮"></sc-panel>

<sc-page current="{{ current }}" total="5" bind:change="handleChange">
    <view slot="prev">
        <sc-icon type="return"></sc-icon>
        上一步
    </view>
    <view slot="next">
        下一步
        <sc-icon type="enter"></sc-icon>
    </view>
</sc-page>

<sc-panel title="隐藏数字"></sc-panel>

<sc-page current="{{ current }}" total="5" simple bind:change="handleChange">
    <view slot="prev">Prev</view>
    <view slot="next">Next</view>
</sc-page>

<sc-panel title="只显示数字"></sc-panel>

<sc-page current="{{ current }}" total="5" mode="number" bind:change="handleChange"></sc-page>

<sc-panel title="显示点"></sc-panel>

<sc-page current="{{ current }}" total="5" mode="pointer" bind:change="handleChange"></sc-page>