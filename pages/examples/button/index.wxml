<sc-panel title="一般用法"></sc-panel>

<sc-button bind:click="handleClick" inline type="ghost">行内按钮</sc-button>
<sc-button bind:click="handleClick" inline type="primary">行内按钮</sc-button>
<sc-button bind:click="handleClick" inline type="success">行内按钮</sc-button>

<sc-button bind:click="handleClick" type="ghost">默认按钮</sc-button>
<sc-button bind:click="handleClick" type="error" long="true">联通两边按钮</sc-button>
<sc-button bind:click="handleClick" type="primary">Primary</sc-button>
<sc-button bind:click="handleClick" type="ghost">Ghost</sc-button>
<sc-button bind:click="handleClick" type="info">Info</sc-button>
<sc-button bind:click="handleClick" type="success">Success</sc-button>
<sc-button bind:click="handleClick" type="warning">Warning</sc-button>
<sc-button bind:click="handleClick" type="error">Error</sc-button>

<sc-panel title="不同尺寸"></sc-panel>

<sc-button bind:click="handleClick" type="primary" size="large">大尺寸</sc-button>
<sc-button bind:click="handleClick" type="primary" size="default">默认尺寸</sc-button>
<sc-button bind:click="handleClick" type="primary" size="small">小尺寸</sc-button>

<sc-panel title="圆角的不同尺寸"></sc-panel>

<sc-button bind:click="handleClick" type="success" shape="circle" size="large">大尺寸</sc-button>
<sc-button bind:click="handleClick" type="success" shape="circle">默认尺寸</sc-button>
<sc-button bind:click="handleClick" type="success" shape="circle" size="small">小尺寸</sc-button>

<sc-button bind:click="handleClick" type="primary" loading="true">加载中按钮</sc-button>

<sc-button bind:click="handleClick" type="primary" disabled>禁用按钮</sc-button>